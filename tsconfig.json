{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@gypsy/bootstrap": ["libs/bootstrap/src"],
      "@gypsy/bootstrap/*": ["libs/bootstrap/src/*"],
      "@gypsy/config": ["libs/config/src"],
      "@gypsy/config/*": ["libs/config/src/*"],
      "@gypsy/logger": ["libs/logger/src"],
      "@gypsy/logger/*": ["libs/logger/src/*"],
      "@gypsy/core": ["libs/core/src"],
      "@gypsy/core/*": ["libs/core/src/*"],
      "@gypsy/jwt-auth": ["libs/jwt-auth/src"],
      "@gypsy/jwt-auth/*": ["libs/jwt-auth/src/*"],
      "@gypsy/common": ["libs/common/src"],
      "@gypsy/common/*": ["libs/common/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
